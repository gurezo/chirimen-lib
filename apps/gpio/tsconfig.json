{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@chirimen/shared": ["../../libs/shared/src"],
      "@chirimen/gpio": ["../../libs/gpio/src"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
